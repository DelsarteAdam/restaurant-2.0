doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title contact
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid.ms-5.me-5
    a.navbar-brand(href='/')
      img(src='/Images/logo food art.png' alt='logo' width='100px')
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    .btn-group.dropstart
      button.btn.btn-light.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
        | Menu
      ul.dropdown-menu
        li
          a.dropdown-item(href='/menu') Menu
        li
          a.dropdown-item(href='/pictures') Pictures
        li
          a.dropdown-item(href='/restaurant') Restaurant
        li
          a.dropdown-item(href='/contact') Contact
// main table
.container
  main
    .py-5.text-center
      img.d-block.mx-auto.mb-4(src='/Images/logo food art.png' alt='' width='200' height='200')
      h2 Contact
      p.lead
        | Fill your contact form we will be contacting you as soon as possible
        | !
    .row
      .col
        h4.mb-3 Contact information
        form.needs-validation(novalidate='')
          .row.g-3
            .col-sm-6
              label.form-label(for='firstName') First name
              input#firstName.form-control(type='text' placeholder='' value='' required='')
              .invalid-feedback
                | Valid first name is required.
            .col-sm-6
              label.form-label(for='lastName') Last name
              input#lastName.form-control(type='text' placeholder='' value='' required='')
              .invalid-feedback
                | Valid last name is required.
            .col-12
              label.form-label(for='email') Email 
              input#email.form-control(type='email' placeholder='yourmail@personal.com')
              .invalid-feedback
                | Please enter a valid email address for shipping updates.
            .col-12
              label.form-label(for='address')
                | Address
                span.text-body-secondary (Optional)
              input#address.form-control(type='text' placeholder='adress')
            .col-md-5
              label.form-label(for='country') Country
              select#country.form-select(required='')
                option(value='') .
                option Belgium
              .invalid-feedback
                | Please select a valid country.
            .col-md-4
              label.form-label(for='state') Province
              select#state.form-select(required='')
                option(value='') .
                option hainaut
                option Anvers
                option Limbourg
                option Flandre occidentale
                option Flandre orientale
                option Brabant flamand
                option Brabant wallon
                option Li&egrave;ge
                option Luxembourg
                option Namur
              .invalid-feedback
                | Please provide a valid state.
            .col-md-3
              label.form-label(for='postalcode') code postal
              input#postalcode.form-control(type='text' placeholder='' required='')
              .invalid-feedback code postal code required.
          button.w-100.btn.btn-dark.btn-lg.mt-5(type='submit')
            | Submit
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
